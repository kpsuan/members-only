<h1>All Posts</h1>

<% @posts.each do |post| %>
  <div>
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>
    <% if user_signed_in? %>
      <p>Author: <%= post.user.email %></p>
    <% end %>
  </div>
  <hr>
<% end %>

<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>
